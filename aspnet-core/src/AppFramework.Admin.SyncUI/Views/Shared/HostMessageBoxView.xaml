<UserControl
    x:Class="AppFramework.Admin.SyncUI.HostMessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:AppFramework.Shared;assembly=AppFramework.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="450"
    Height="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.RowSpan="3"
            CornerRadius="0"
            Opacity="1"
            Style="{StaticResource BorderStyle}" />

        <Grid Margin="20" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Image
                    Width="50"
                    Height="50"
                    VerticalAlignment="Bottom"
                    Source="/Assets/Images/info.png" />
                <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    d:Text="This is a warning message"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding Title}" />
            </StackPanel>

            <TextBlock
                Grid.Row="1"
                Margin="60,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                d:Text="Alert message content！"
                Opacity="0.6"
                Text="{Binding Message}"
                TextWrapping="Wrap" />
        </Grid>

        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Command="{Binding SaveCommand}"
                Content="{extensions:Translate Yes}"
                Style="{StaticResource SimpleButton}" />

            <Button
                Margin="10,0,0,0"
                Command="{Binding CancelCommand}"
                Content="{extensions:Translate No}"
                Style="{StaticResource SimpleButton}" />
        </StackPanel>
    </Grid>
</UserControl>
