<UserControl
    x:Class="AppFramework.Admin.SyncUI.DemoUiView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:AppFramework.Shared;assembly=AppFramework.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource HeaderBorderStyle}" />

        <DockPanel Margin="20,15" LastChildFill="False">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding Title}" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10">
            <Border
                Grid.RowSpan="5"
                Grid.ColumnSpan="2"
                Style="{StaticResource BorderStyle}" />

            <StackPanel Margin="15">
                <StackPanel Orientation="Horizontal">
                    <Button Padding="5" Content="按钮" />
                    <Button
                        Margin="10,0"
                        Padding="5"
                        Content="按钮" />
                    <Button
                        Padding="5"
                        Content="按钮"
                        IsEnabled="False" />
                </StackPanel>

                <sync:SfMaskedEdit Margin="0,10" />

                <sync:SfTextBoxExt Margin="0,10" Text="输入框" />

                <PasswordBox Margin="0,10" Password="123456" />

                <sync:DateTimeEdit Margin="0,10" />

                <UniformGrid
                    Margin="0,10"
                    Columns="3"
                    Rows="2">
                    <RadioButton
                        Margin="5"
                        Content="单选按钮"
                        IsChecked="True" />
                    <RadioButton
                        Margin="5"
                        Content="单选按钮"
                        IsEnabled="False" />
                    <RadioButton
                        Margin="5"
                        Content="单选按钮"
                        IsEnabled="False" />
                    <RadioButton Margin="5" Content="单选按钮" />
                    <RadioButton Margin="5" Content="单选按钮" />
                    <RadioButton Margin="5" Content="单选按钮" />
                </UniformGrid>

                <WrapPanel Margin="0,10">
                    <CheckBox Margin="5" Content="ABC" />
                    <CheckBox Margin="5" Content="EFG" />
                    <CheckBox Margin="5" Content="EFG" />
                    <CheckBox
                        Margin="5"
                        Content="ABC"
                        IsEnabled="False" />
                    <CheckBox
                        Margin="5"
                        Content="EFG"
                        IsEnabled="False" />
                    <CheckBox
                        Margin="5"
                        Content="EFG"
                        IsEnabled="False" />
                </WrapPanel>

                <ComboBox Margin="0,10" SelectedIndex="0">
                    <ComboBoxItem>下拉选项</ComboBoxItem>
                    <ComboBoxItem>下拉选项</ComboBoxItem>
                </ComboBox>

                <UniformGrid HorizontalAlignment="Left" Columns="5">
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="Ripple"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="DotCircle"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="Cupertino"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="DualRing"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="DoubleRing"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="DoubleCircle"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="Gear"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="Flight"
                        Background="Transparent" />
                    <sync:SfBusyIndicator
                        Margin="15"
                        AnimationType="Temperature"
                        Background="Transparent" />
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
